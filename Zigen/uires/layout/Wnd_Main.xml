<?xml version="1.0" encoding="utf-8"?>
<SOUI name="main" title="形码练习" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:32" width="640" height="450"
	  resizable="0" margin="4,8,8,8" appWnd="1" translucent="1" sendWheel2Hover="0" >

<root skin="shadow" >
	<caption pos="5,3,-5,@32" name="caption" colorBkgnd="@color/theme" >
		<text pos="20,|0"  offset="0, -0.5" name="text_title" text="形码练习工具" class="cls_title"/>
	
		<imgbtn pos="-1,1" offset="-1,0" name="btn_close" skin="_skin.sys.btn.close" tip="关闭" animate="0"/>
	</caption>


	<window pos="5,[0,-5,-7" colorBkgnd="@color/bg" layout="vbox" gravity="center">
		<window size="-2,100" layout="hbox" gravity="top" inset="0,10,0,0">
			<combobox size="160,26" extend_left="20" name="cb_zz" >
				<liststyle class="combo_list" />
			</combobox>
			
			<window weight="1"/>

			<window size="80,-2" >
				<text pos="20,0" size="-2,-1" text="0%" name="text_cent" font="bold:1,size:16" align="right"  />
				<text pos="20,[0" size="-2,-1" name="text_progress" text="0/0" align="right" />

			</window>

			<window size="80,-2" extend_left="20" display="0" >
				<img pos="14,2" skin="star" />
				<text pos="[2,{0" text="*1倍" name="text_bb" />
				<text pos="|0,[2" offset="-0.5,0" name="text_points" text="" font="bold:1,size:16" align="center" />
				<text pos="10,-0" offset="1,-1" size="-1,60" name="text_score" text="" font="bold:1,size:16" colorText="#22C55E" />
			</window>
			<window size="60,-2" display="0" >
				<img pos="3,2" skin="chicken" />
				<text pos="[2,0" text="连击" />
				<text pos="|0,[2" offset="-0.5,0" name="text_ccc" text="0" font="bold:1,size:16" align="center" />
			</window>
			<window size="40,2"/>
		</window>

		<tabctrl size="-2,1" weight="1" name="tab_main" focusable="0" animateSteps="0" tabHeight="0" >
			<page name="zigen" layout="vbox" gravity="center">
				<window size="-1,220" name="lay_zigen" layout="vbox" gravity="center">
					<img size="-1,130" name="img_zi" />
					<text size="-1,50" name="text_code" text="" class="cls_code"/>
				</window>

				<window size="-2,60" layout="hbox" gravity="center">
					<window weight="1"/>
					<text size="60,60" name="text_first" text="" skin="shadow" class="cls_code"/>

					<text size="60,60" name="text_second" text="" skin="shadow" display="0"  class="cls_code" />
					<window weight="1"/>
				</window>
			</page>

			<page name="hanzi" layout="vbox" gravity="center">
				<window size="-1,120" name="lay_hanzi" layout="vbox" gravity="center">
					<text size="-1,40" name="text_pin" text="" class="cls_code"/>
					<text size="-1,60" name="text_hanzi" text="" class="cls_hanzi"/>
				</window>
				<window height="40"/>
				<edit size="80,48" inset="2,4,2,0" name="edit_hanzi" notifyChange="1" align="center" margin="1" ncSkin="ncBroder"  font="face:微软雅黑,size:26"/>
			</page>
		</tabctrl>
	</window>
	
</root>

</SOUI>